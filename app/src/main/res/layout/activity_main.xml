<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.kareem.quotegenerator.MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/bruin_bear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="UCLA Professor Quote Generator"
        android:textAlignment="center"
        android:textColor="#01184A"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/bruin_accent" />

    <TextView
        android:id="@+id/quotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Select a professor and then press generate to get a quote."
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/smbrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Smallberg"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/smallberg_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/smallberg"
                android:textColor="#000"
                android:background="?attr/selectableItemBackgroundBorderless" />
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nchnbrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Nachenberg"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />
            />

            <ImageButton
                android:id="@+id/nachenberg_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/nachenberg"
                android:textColor="#000"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            />
            <!-- Insert Second Professor Text View and ImageButton -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eggrt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Eggert"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />
            />

            <ImageButton
                android:id="@+id/eggert_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/miodrag"
                android:textColor="#000"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            />
            <!-- Insert Third Professor Text View and ImageButton -->
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/g_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="#FDC511"
        android:text="Generate"
        android:textColor="#fff" />
</LinearLayout>